<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.theme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.popupTheme" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="nav_text">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">14sp</item>
    </style>w
    <style name="cardView_item_text">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!--dialog pop theme-->
    <style name="dialog_pop" parent="android:style/Theme.Dialog">
        <item name="android:background">#FFFFFFFF</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="bottom_menu_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_menu_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_menu_exit</item>
    </style>
    <style name="style_dialog_text">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="style_dialog_button">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <style name="Splash_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:windowBackground">@drawable/splash_background</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
