<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_head_height"
                android:background="@color/colorPrimary"
                android:padding="@dimen/nav_padding">
    <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/nav_profile"
                                               android:layout_width="@dimen/nav_image_width"
                                               android:layout_height="@dimen/nav_image_height"
                                               android:layout_centerInParent="true"
                                               android:src="@mipmap/ic_launcher"/>
    <TextView android:id="@+id/nav_profile_name" style="@style/nav_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_above="@+id/nav_mail"
              android:text="@string/profile_name"/>

    <TextView android:id="@+id/nav_mail" style="@style/nav_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:text="@string/nav_mail"/>
</RelativeLayout>